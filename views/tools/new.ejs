    <label for="whereToBuy">Where to purchase link<span> *</span></label>
    <input type="text" class="form-control" id="whereToBuy" name="whereToBuy" />
  </div></br><br>
  <div class="form-group">
    <label for="recommended">Recommended</label>
    <input type="checkbox" name="recommended" id="recommended" />

<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/app.css">
  </head>
  <body id="boxNewBG">
    <header>

        <h1>Create a New ToolBox</h1>
    
    <div id=main-menu>
        <div class="nav-item"><a class="nav-link" href="/boxes">Back to ToolBoxes</a></div>
    </div>
    
     </header>


<form action="/boxes" method="POST">
  <div>
    <label for="name">ToolBox Name <span> *</span></label>
    <input type="text" class="form-control" id="name" name="name" />

    <label for="useType">Buyer Category <span> *</span></label>
    <input type="text" class="form-control" id="useType" name="useType" />
  </div>
  <div class="container table-responsive">
    <h4>Tools</h4>
   
    <table class="table table-striped table-border table-hover" style="width:100%">
        
        <tr>
          <th>Add</th>
          <th>Tool Name</th>
          <th>Picture </th>
          <th>Where to BUY</th>
          <th>Recommended</th>
        </tr>
            <% tools.forEach(tool => { %>
            <tr>
                <td>
                    <input type="checkbox" id="<%= tool.name %>" name="tools" value="<%= tool.id %>"/>
                    <label for="<%= tool.name %>"></label>  
                                      
                </td>
                <td>
                    <%= tool.name %>
                </td>
                <td>    
                    <a href="<%= tool.picture %>"> See picture </a> 
                </td>
                <td>
                    <a href="<%= tool.whereToBuy %>"> Buy Now </a> 
                </td>
                <td>
                    <% if (tool.recommended) { %>
                        Yes- recommended!
                    <% } else { %>
                        NOT recommended.
                    <% } %>
                </td>
            </tr>
            
            <% }) %>

      </table>
    
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
</body>
</html>
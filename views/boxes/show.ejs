    <div class="container">

<h1><%= box.name %></h1>

<h4>Tools in toolbox</h4>
<ul>
  <% box.tools.forEach(box => { %>
  <li><%= box.name %> <% }) %></li>
  <a href="/boxes/">Back to ToolBoxes</a>
</ul>

<h4>Choose a new tool to add</h4>
<form action="/boxes/<%= box.id %>/tools?_method=PUT" method="POST">
  <% tools.forEach(tool => { %>
  <input type="checkbox" name="tools" value="<%= tool.id %>" />
  <label for="<%= tool.name %>"><%= tool.name %></label><br />
  <% })%>
  <input type="submit" value="Add Tools" />
</form>

</div>
</body>
</html>